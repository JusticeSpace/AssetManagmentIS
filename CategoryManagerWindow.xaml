<Window x:Class="AssetManagment.Windows.CategoryManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Управление категориями" Height="620" Width="1000"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" ResizeMode="NoResize"
        Background="Transparent" AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="IconButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="4,0"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="16" Background="White">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Direction="-90" ShadowDepth="4" Opacity="0.25"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="64"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" MouseDown="Header_MouseDown">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6366F1" Offset="0"/>
                        <GradientStop Color="#8B5CF6" Offset="0.6"/>
                        <GradientStop Color="#EC4899" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <Border Background="#20FFFFFF" CornerRadius="10" Width="40" Height="40" Margin="0,0,12,0">
                        <materialDesign:PackIcon Kind="ShapeOutline" Foreground="White" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="Управление категориями" Foreground="White" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text="Добавляйте, редактируйте и удаляйте категории активов" Foreground="#EAEAEA" FontSize="12" Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>
                <Button Grid.Column="1" Style="{StaticResource MaterialDesignIconButton}" Width="40" Height="40" Click="CloseButton_Click">
                    <materialDesign:PackIcon Kind="Close" Foreground="White" Width="18" Height="18"/>
                </Button>
            </Grid>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="340"/>
                </Grid.ColumnDefinitions>

                <!-- Left: list + search -->
                <Border Grid.Column="0" Background="#F8FAFC" CornerRadius="12" Padding="16" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,12,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <Border Background="#EEF2FF" CornerRadius="8" Width="32" Height="32" Margin="0,0,8,0">
                                <materialDesign:PackIcon Kind="FormatListBulleted" Width="16" Height="16" Foreground="#6366F1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Список категорий" FontSize="16" FontWeight="Bold" Foreground="#1F2937"/>
                                <TextBlock x:Name="txtCategoryCount" Text="Всего: 0" FontSize="12" Foreground="#64748B"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- search -->
                        <Border Grid.Row="1" Background="White" CornerRadius="8" BorderBrush="#E2E8F0" BorderThickness="1" Padding="10" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Kind="Magnify" Foreground="#94A3B8" Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox x:Name="txtSearchCategories" Grid.Column="1" BorderThickness="0" Background="Transparent" 
                                         VerticalContentAlignment="Center" FontSize="13" 
                                         materialDesign:HintAssist.Hint="Поиск по названию..." 
                                         TextChanged="TxtSearchCategories_TextChanged"/>
                            </Grid>
                        </Border>

                        <DataGrid Grid.Row="2" x:Name="dgCategories" AutoGenerateColumns="False" CanUserAddRows="False"
                                  HeadersVisibility="Column" GridLinesVisibility="None" Background="Transparent"
                                  IsReadOnly="True" SelectionMode="Single" SelectionChanged="DgCategories_SelectionChanged"
                                  materialDesign:DataGridAssist.CellPadding="12 8" materialDesign:DataGridAssist.ColumnHeaderPadding="12 8">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Margin" Value="0,0,0,4"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#EEF2FF"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#E0E7FF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="#475569"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Height" Value="40"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding CategoryID}" Width="60">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#6366F1"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Название" Binding="{Binding CategoryName}" Width="*" MinWidth="160">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#1F2937"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*" MinWidth="200">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#64748B"/>
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Действия" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Style="{StaticResource IconButtonStyle}" ToolTip="Редактировать"
                                                        Click="BtnEditCategory_Click" CommandParameter="{Binding}">
                                                    <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16" Foreground="#6366F1"/>
                                                </Button>
                                                <Button Style="{StaticResource IconButtonStyle}" ToolTip="Удалить" 
                                                        Click="BtnDeleteCategory_Click" CommandParameter="{Binding}">
                                                    <materialDesign:PackIcon Kind="DeleteForever" Width="16" Height="16" Foreground="#EF4444"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- Right: form -->
                <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="24" BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                            <Border x:Name="FormIconBorder" Background="#EEF2FF" CornerRadius="8" Width="32" Height="32" Margin="0,0,12,0">
                                <materialDesign:PackIcon x:Name="FormIcon" Kind="Plus" Width="16" Height="16" Foreground="#6366F1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="txtFormTitle" Text="Новая категория" FontSize="16" FontWeight="Bold" Foreground="#1F2937"/>
                                <TextBlock x:Name="txtFormSubtitle" Text="Заполните данные" FontSize="12" Foreground="#64748B" Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBox x:Name="txtCategoryName" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Название категории •" Margin="0,0,0,12"/>
                        <TextBox x:Name="txtDescription" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Описание" TextWrapping="Wrap" AcceptsReturn="True"
                                 MinLines="4" MaxLines="6" Margin="0,0,0,16"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Button Content="Сохранить" x:Name="btnSaveCategory" Click="BtnSaveCategory_Click"
                                    Style="{StaticResource MaterialDesignRaisedButton}" Background="#6366F1" Foreground="White"
                                    materialDesign:ButtonAssist.CornerRadius="10" Height="40" Width="140"/>
                            <Button Content="Очистить" x:Name="btnCancelEdit" Click="BtnCancelEdit_Click"
                                    Style="{StaticResource MaterialDesignOutlinedButton}" Margin="12,0,0,0" Height="40" Width="120"/>
                        </StackPanel>

                        <Border Background="#F8FAFC" CornerRadius="8" Padding="12">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Information" Width="16" Height="16" Foreground="#6366F1" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Поле со знаком • обязательно" FontSize="12" Foreground="#64748B" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                        <materialDesign:PackIcon Kind="AlertCircle" Width="16" Height="16" Foreground="#94A3B8" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Удаление категории возможно, если к ней не привязаны активы" FontSize="12" Foreground="#94A3B8"/>
                    </StackPanel>
                    <Button Grid.Column="1" Content="Закрыть" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Margin="0,0,20,0" Click="CloseButton_Click" Width="120" Height="36"
                            Style="{StaticResource MaterialDesignOutlinedButton}" materialDesign:ButtonAssist.CornerRadius="10"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>