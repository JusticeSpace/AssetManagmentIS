<Page x:Class="AssetManagment.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="DashboardPage">

    <Page.Resources>
        <!-- Стиль для карточек статистики -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" 
                                    Direction="-90" 
                                    RenderingBias="Quality" 
                                    ShadowDepth="4"
                                    Opacity="0.1"
                                    Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок быстрых действий -->
        <Style x:Key="QuickActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8FAFC"/>
                    <Setter Property="BorderBrush" Value="#CBD5E1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#F8FAFC">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Приветствие -->
            <Border Grid.Row="0" 
                   Padding="32"
                   Margin="0,0,0,24"
                   CornerRadius="20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6366F1" Offset="0"/>
                        <GradientStop Color="#8B5CF6" Offset="0.7"/>
                        <GradientStop Color="#EC4899" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <!-- Единый контейнер -->
                <Grid>
                    <!-- Декоративные элементы -->
                    <Canvas>
                        <Ellipse Width="200" Height="200" 
                               Fill="#20FFFFFF" 
                               Canvas.Right="-50" 
                               Canvas.Top="-50"/>
                        <Ellipse Width="120" Height="120" 
                               Fill="#30FFFFFF" 
                               Canvas.Left="-30" 
                               Canvas.Bottom="-30"/>
                    </Canvas>

                    <!-- Контент -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock x:Name="txtWelcome"
                                     Text="Добро пожаловать, Администратор!"
                                     FontSize="28"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     Margin="0,0,0,8"/>
                            <TextBlock Text="Обзор системы управления активами"
                                     FontSize="16"
                                     Foreground="#E0E7FF"/>
                            <TextBlock x:Name="txtLastUpdate"
                                     Text="Последнее обновление: сегодня в 14:30"
                                     FontSize="14"
                                     Foreground="#C7D2FE"
                                     Margin="0,8,0,0"/>
                        </StackPanel>

                        <Border Grid.Column="1"
                               Background="#20FFFFFF"
                               CornerRadius="16"
                               Width="80" Height="80"
                               VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ViewDashboard"
                                                   Width="40" Height="40"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- Карточки статистики -->
            <UniformGrid Grid.Row="1" Rows="1" Columns="4">
                <!-- Всего активов -->
                <Border Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" 
                                   Orientation="Horizontal" 
                                   Margin="0,0,0,16">
                            <Border Background="#EEF2FF"
                                   CornerRadius="12"
                                   Width="48" Height="48"
                                   Margin="0,0,16,0">
                                <materialDesign:PackIcon Kind="Package" 
                                                       Width="24" Height="24"
                                                       Foreground="#6366F1"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Всего активов"
                                         FontSize="14"
                                         Foreground="#64748B"
                                         FontWeight="Medium"/>
                                <TextBlock x:Name="txtTotalAssetsChange"
                                         Text="Загрузка..."
                                         FontSize="12"
                                         Foreground="#10B981"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Row="1" 
                                 x:Name="txtTotalAssets"
                                 Text="0" 
                                 FontSize="36"
                                 FontWeight="Bold"
                                 Foreground="#1F2937"
                                 Margin="0,0,0,8"/>

                        <ProgressBar Grid.Row="2"
                                   Height="4"
                                   Value="100"
                                   Background="#F1F5F9"
                                   Foreground="#6366F1"/>
                    </Grid>
                </Border>

                <!-- Активные -->
                <Border Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" 
                                   Orientation="Horizontal" 
                                   Margin="0,0,0,16">
                            <Border Background="#ECFDF5"
                                   CornerRadius="12"
                                   Width="48" Height="48"
                                   Margin="0,0,16,0">
                                <materialDesign:PackIcon Kind="CheckCircle" 
                                                       Width="24" Height="24"
                                                       Foreground="#10B981"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Активные"
                                         FontSize="14"
                                         Foreground="#64748B"
                                         FontWeight="Medium"/>
                                <TextBlock x:Name="txtActiveAssetsPercent"
                                         Text="0% от общего числа"
                                         FontSize="12"
                                         Foreground="#10B981"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Row="1" 
                                 x:Name="txtActiveAssets"
                                 Text="0" 
                                 FontSize="36"
                                 FontWeight="Bold"
                                 Foreground="#10B981"
                                 Margin="0,0,0,8"/>

                        <ProgressBar Grid.Row="2"
                                   x:Name="progressActive"
                                   Height="4"
                                   Value="0"
                                   Background="#F1F5F9"
                                   Foreground="#10B981"/>
                    </Grid>
                </Border>

                <!-- На ремонте -->
                <Border Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" 
                                   Orientation="Horizontal" 
                                   Margin="0,0,0,16">
                            <Border Background="#FEF3C7"
                                   CornerRadius="12"
                                   Width="48" Height="48"
                                   Margin="0,0,16,0">
                                <materialDesign:PackIcon Kind="Wrench" 
                                                       Width="24" Height="24"
                                                       Foreground="#F59E0B"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="На ремонте"
                                         FontSize="14"
                                         Foreground="#64748B"
                                         FontWeight="Medium"/>
                                <TextBlock x:Name="txtInRepairInfo"
                                         Text="Требуют внимания"
                                         FontSize="12"
                                         Foreground="#F59E0B"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Row="1" 
                                 x:Name="txtInRepair"
                                 Text="0" 
                                 FontSize="36"
                                 FontWeight="Bold"
                                 Foreground="#F59E0B"
                                 Margin="0,0,0,8"/>

                        <ProgressBar Grid.Row="2"
                                   x:Name="progressRepair"
                                   Height="4"
                                   Value="0"
                                   Background="#F1F5F9"
                                   Foreground="#F59E0B"/>
                    </Grid>
                </Border>

                <!-- Списано -->
                <Border Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" 
                                   Orientation="Horizontal" 
                                   Margin="0,0,0,16">
                            <Border Background="#FEF2F2"
                                   CornerRadius="12"
                                   Width="48" Height="48"
                                   Margin="0,0,16,0">
                                <materialDesign:PackIcon Kind="Cancel" 
                                                       Width="24" Height="24"
                                                       Foreground="#EF4444"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Списано"
                                         FontSize="14"
                                         Foreground="#64748B"
                                         FontWeight="Medium"/>
                                <TextBlock x:Name="txtDisposedInfo"
                                         Text="За текущий год"
                                         FontSize="12"
                                         Foreground="#EF4444"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Row="1" 
                                 x:Name="txtDisposed"
                                 Text="0" 
                                 FontSize="36"
                                 FontWeight="Bold"
                                 Foreground="#EF4444"
                                 Margin="0,0,0,8"/>

                        <ProgressBar Grid.Row="2"
                                   x:Name="progressDisposed"
                                   Height="4"
                                   Value="0"
                                   Background="#F1F5F9"
                                   Foreground="#EF4444"/>
                    </Grid>
                </Border>
            </UniformGrid>

            <!-- Графики и статистика -->
            <Grid Grid.Row="2" Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- График -->
                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="300"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" 
                                   Orientation="Horizontal"
                                   Margin="0,0,0,24">
                            <Border Background="#EEF2FF"
                                   CornerRadius="8"
                                   Width="32" Height="32"
                                   Margin="0,0,12,0">
                                <materialDesign:PackIcon Kind="ChartLine" 
                                                       Width="18" Height="18"
                                                       Foreground="#6366F1"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Динамика активов"
                                         FontSize="18"
                                         FontWeight="Bold"
                                         Foreground="#1F2937"/>
                                <TextBlock Text="За последние 12 месяцев"
                                         FontSize="14"
                                         Foreground="#64748B"/>
                            </StackPanel>
                        </StackPanel>

                        <Border Grid.Row="1" 
                               Background="#F8FAFC" 
                               CornerRadius="12"
                               BorderBrush="#E2E8F0"
                               BorderThickness="1">
                            <Grid>
                                <materialDesign:PackIcon Kind="ChartAreaspline" 
                                                       Width="80" Height="80"
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"
                                                       Foreground="#CBD5E1"/>
                                <StackPanel HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           Margin="0,80,0,0">
                                    <TextBlock Text="График будет доступен"
                                             FontSize="16"
                                             FontWeight="Medium"
                                             Foreground="#475569"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="после накопления данных"
                                             FontSize="14"
                                             Foreground="#64748B"
                                             HorizontalAlignment="Center"
                                             Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Категории -->
                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" 
                                   Orientation="Horizontal"
                                   Margin="0,0,0,24">
                            <Border Background="#F0FDF4"
                                   CornerRadius="8"
                                   Width="32" Height="32"
                                   Margin="0,0,12,0">
                                <materialDesign:PackIcon Kind="ChartPie" 
                                                       Width="18" Height="18"
                                                       Foreground="#10B981"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Категории"
                                         FontSize="18"
                                         FontWeight="Bold"
                                         Foreground="#1F2937"/>
                                <TextBlock Text="Распределение активов"
                                         FontSize="14"
                                         Foreground="#64748B"/>
                            </StackPanel>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="CategoriesItemsControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8FAFC"
                                               CornerRadius="8"
                                               Padding="16"
                                               Margin="0,0,0,12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding CategoryName}" 
                                                             FontSize="14"
                                                             FontWeight="Medium"
                                                             Foreground="#1F2937"/>
                                                    <ProgressBar Value="{Binding Percentage}" 
                                                               Height="6" 
                                                               Background="#E2E8F0"
                                                               Foreground="#6366F1"
                                                               Margin="0,8,0,0"/>
                                                </StackPanel>

                                                <Border Grid.Column="1"
                                                       Background="#6366F1"
                                                       CornerRadius="12"
                                                       Padding="8,4"
                                                       Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Count}" 
                                                             FontSize="12"
                                                             FontWeight="Bold"
                                                             Foreground="White"
                                                             HorizontalAlignment="Center"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Последние действия и быстрые действия -->
            <Grid Grid.Row="3" Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Последние действия -->
                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" 
                                   Orientation="Horizontal"
                                   Margin="0,0,0,24">
                            <Border Background="#FEF3C7"
                                   CornerRadius="8"
                                   Width="32" Height="32"
                                   Margin="0,0,12,0">
                                <materialDesign:PackIcon Kind="History" 
                                                       Width="18" Height="18"
                                                       Foreground="#F59E0B"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Последние действия"
                                         FontSize="18"
                                         FontWeight="Bold"
                                         Foreground="#1F2937"/>
                                <TextBlock Text="Недавняя активность"
                                         FontSize="14"
                                         Foreground="#64748B"/>
                            </StackPanel>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" 
                                    VerticalScrollBarVisibility="Auto"
                                    MaxHeight="300">
                            <ItemsControl x:Name="RecentActionsItemsControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8FAFC"
                                               CornerRadius="8"
                                               Padding="16"
                                               Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                       Background="{Binding IconBackgroundColor}"
                                                       CornerRadius="8"
                                                       Width="32" Height="32"
                                                       Margin="0,0,12,0">
                                                    <materialDesign:PackIcon Kind="{Binding Icon}" 
                                                                           Width="16" Height="16"
                                                                           Foreground="{Binding IconColor}"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"/>
                                                </Border>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Action}" 
                                                             FontSize="14"
                                                             FontWeight="Medium"
                                                             Foreground="#1F2937"/>
                                                    <TextBlock Text="{Binding Description}" 
                                                             FontSize="12"
                                                             Foreground="#64748B"
                                                             TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>

                                                <TextBlock Grid.Column="2" 
                                                         Text="{Binding Time}" 
                                                         FontSize="11"
                                                         VerticalAlignment="Center"
                                                         Foreground="#94A3B8"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <Button Grid.Row="2" 
                               Content="Показать все действия" 
                               Style="{StaticResource MaterialDesignFlatButton}"
                               HorizontalAlignment="Right"
                               Foreground="#6366F1"
                               FontWeight="SemiBold"
                               Margin="0,16,0,0"/>
                    </Grid>
                </Border>

                <!-- Быстрые действия -->
                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" 
                                   Orientation="Horizontal"
                                   Margin="0,0,0,24">
                            <Border Background="#EEF2FF"
                                   CornerRadius="8"
                                   Width="32" Height="32"
                                   Margin="0,0,12,0">
                                <materialDesign:PackIcon Kind="Flash" 
                                                       Width="18" Height="18"
                                                       Foreground="#6366F1"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Быстрые действия"
                                         FontSize="18"
                                         FontWeight="Bold"
                                         Foreground="#1F2937"/>
                                <TextBlock Text="Популярные операции"
                                         FontSize="14"
                                         Foreground="#64748B"/>
                            </StackPanel>
                        </StackPanel>

                        <UniformGrid Grid.Row="1" Columns="2" Rows="3">
                            <Button x:Name="btnAddAsset"
                                   Style="{StaticResource QuickActionButtonStyle}"
                                   Click="BtnAddAsset_Click">
                                <StackPanel>
                                    <Border Background="#EEF2FF"
                                           CornerRadius="8"
                                           Width="32" Height="32"
                                           Margin="0,0,0,8">
                                        <materialDesign:PackIcon Kind="Plus" 
                                                               Width="18" Height="18"
                                                               Foreground="#6366F1"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Добавить" 
                                             FontSize="13"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="актив" 
                                             FontSize="13"
                                             HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnScanAsset"
                                   Style="{StaticResource QuickActionButtonStyle}"
                                   Click="BtnScanAsset_Click">
                                <StackPanel>
                                    <Border Background="#F0FDF4"
                                           CornerRadius="8"
                                           Width="32" Height="32"
                                           Margin="0,0,0,8">
                                        <materialDesign:PackIcon Kind="Barcode" 
                                                               Width="18" Height="18"
                                                               Foreground="#10B981"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Сканировать" 
                                             FontSize="13"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="QR-код" 
                                             FontSize="13"
                                             HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnExportReport"
                                   Style="{StaticResource QuickActionButtonStyle}"
                                   Click="BtnExportReport_Click">
                                <StackPanel>
                                    <Border Background="#FEF3C7"
                                           CornerRadius="8"
                                           Width="32" Height="32"
                                           Margin="0,0,0,8">
                                        <materialDesign:PackIcon Kind="FileExport" 
                                                               Width="18" Height="18"
                                                               Foreground="#F59E0B"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Экспорт" 
                                             FontSize="13"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="отчета" 
                                             FontSize="13"
                                             HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnInventory"
                                   Style="{StaticResource QuickActionButtonStyle}"
                                   Click="BtnInventory_Click">
                                <StackPanel>
                                    <Border Background="#FEF2F2"
                                           CornerRadius="8"
                                           Width="32" Height="32"
                                           Margin="0,0,0,8">
                                        <materialDesign:PackIcon Kind="ClipboardCheck" 
                                                               Width="18" Height="18"
                                                               Foreground="#EF4444"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Инвентаризация" 
                                             FontSize="13"
                                             HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnNotifications"
                                   Style="{StaticResource QuickActionButtonStyle}"
                                   Click="BtnNotifications_Click">
                                <StackPanel>
                                    <Border Background="#F3F4F6"
                                           CornerRadius="8"
                                           Width="32" Height="32"
                                           Margin="0,0,0,8">
                                        <materialDesign:PackIcon Kind="Bell" 
                                                               Width="18" Height="18"
                                                               Foreground="#6B7280"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Уведомления" 
                                             FontSize="13"
                                             HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnHelp"
                                   Style="{StaticResource QuickActionButtonStyle}"
                                   Click="BtnHelp_Click">
                                <StackPanel>
                                    <Border Background="#EDF2FF"
                                           CornerRadius="8"
                                           Width="32" Height="32"
                                           Margin="0,0,0,8">
                                        <materialDesign:PackIcon Kind="HelpCircle" 
                                                               Width="18" Height="18"
                                                               Foreground="#8B5CF6"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Справка" 
                                             FontSize="13"
                                             HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </UniformGrid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>