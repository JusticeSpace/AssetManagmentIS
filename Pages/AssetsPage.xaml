<Page x:Class="AssetManagment.Pages.AssetsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="AssetsPage"
      Background="#F8FAFC">

    <Page.Resources>
        <!-- Стиль для карточек -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" 
                                    Direction="-90" 
                                    RenderingBias="Quality" 
                                    ShadowDepth="4"
                                    Opacity="0.1"
                                    Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок действий -->
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="8,0"/>
        </Style>
    </Page.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель с фильтрами и действиями -->
        <Border Grid.Row="0" 
                Style="{StaticResource CardStyle}"
                Padding="32"
                Margin="0,0,0,24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Первая строка - Заголовок и кнопки действий -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Заголовок -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="#EEF2FF"
                                CornerRadius="12"
                                Width="48" Height="48"
                                Margin="0,0,16,0">
                            <materialDesign:PackIcon Kind="Package" 
                                                   Width="24" Height="24"
                                                   Foreground="#6366F1"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Управление активами" 
                                     FontSize="24"
                                     FontWeight="Bold"
                                     Foreground="#1F2937"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="Всего активов:"
                                         FontSize="14"
                                         Foreground="#64748B"
                                         Margin="0,0,8,0"/>
                                <TextBlock x:Name="txtTotalCount"
                                         Text="{Binding ElementName=dgAssets, Path=Items.Count}"
                                         FontSize="14"
                                         FontWeight="Bold"
                                         Foreground="#6366F1"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Кнопки действий -->
                    <StackPanel Grid.Column="1" 
                              Orientation="Horizontal"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center">

                        <Button x:Name="btnAdd"
                              Style="{StaticResource ActionButtonStyle}"
                              Background="#6366F1"
                              Foreground="White"
                              Click="BtnAdd_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" 
                                                       VerticalAlignment="Center"
                                                       Width="20" Height="20"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Добавить актив"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnEdit"
                              Style="{StaticResource MaterialDesignOutlinedButton}"
                              materialDesign:ButtonAssist.CornerRadius="12"
                              Height="44"
                              Padding="20,0"
                              Margin="8,0"
                              BorderBrush="#E2E8F0"
                              Foreground="#475569"
                              Click="BtnEdit_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" 
                                                       VerticalAlignment="Center"
                                                       Width="20" Height="20"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Изменить"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnDelete"
                              Style="{StaticResource MaterialDesignOutlinedButton}"
                              materialDesign:ButtonAssist.CornerRadius="12"
                              Height="44"
                              Padding="20,0"
                              Margin="8,0"
                              Foreground="#EF4444"
                              BorderBrush="#FEE2E2"
                              Click="BtnDelete_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete" 
                                                       VerticalAlignment="Center"
                                                       Width="20" Height="20"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Удалить"/>
                            </StackPanel>
                        </Button>

                        <Border Width="1" 
                                Height="32"
                                Background="#E2E8F0"
                                Margin="16,0"/>

                        <Button x:Name="btnExport"
                              Style="{StaticResource MaterialDesignFlatButton}"
                              Height="44"
                              Padding="16,0"
                              Foreground="#64748B"
                              Click="BtnExport_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Download" 
                                                       VerticalAlignment="Center"
                                                       Width="20" Height="20"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Экспорт"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnRefresh"
                              Style="{StaticResource MaterialDesignIconButton}"
                              Width="44" Height="44"
                              ToolTip="Обновить"
                              Background="#F8FAFC"
                              Click="BtnRefresh_Click">
                            <materialDesign:PackIcon Kind="Refresh" Width="20" Height="20"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Вторая строка - Поиск и фильтры -->
                <Grid Grid.Row="1" Margin="0,32,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Поиск -->
                    <Border Grid.Column="0"
                            Background="#F8FAFC"
                            BorderBrush="#E2E8F0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Height="48">
                        <Grid>
                            <materialDesign:PackIcon Kind="Magnify" 
                                                   HorizontalAlignment="Left" 
                                                   VerticalAlignment="Center"
                                                   Margin="16,0,0,0"
                                                   Width="20" Height="20"
                                                   Foreground="#94A3B8"
                                                   IsHitTestVisible="False"/>
                            <TextBox x:Name="txtSearch"
                                   Padding="48,0,40,0"
                                   BorderThickness="0"
                                   Background="Transparent"
                                   VerticalContentAlignment="Center"
                                   FontSize="14"
                                   TextChanged="TxtSearch_TextChanged"/>
                            <TextBlock Text="Поиск по коду, названию..."
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Margin="48,0,0,0"
                                     Foreground="#94A3B8"
                                     IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=txtSearch, Path=Text}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- Фильтры -->
                    <StackPanel Grid.Column="1" 
                              Orientation="Horizontal"
                              Margin="24,0,0,0"
                              VerticalAlignment="Center">

                        <Border Background="#F8FAFC"
                                CornerRadius="8"
                                Padding="12,8"
                                Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Filter"
                                                       Width="16" Height="16"
                                                       VerticalAlignment="Center"
                                                       Foreground="#64748B"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Фильтры:"
                                         FontSize="13"
                                         FontWeight="Medium"
                                         Foreground="#475569"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <ComboBox x:Name="cmbStatusFilter"
                                materialDesign:HintAssist.Hint="Статус"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                Width="150"
                                Height="48"
                                Margin="0,0,12,0"
                                SelectionChanged="CmbStatusFilter_SelectionChanged">
                            <ComboBoxItem Content="Все статусы" IsSelected="True"/>
                            <ComboBoxItem Content="Активные"/>
                            <ComboBoxItem Content="На ремонте"/>
                            <ComboBoxItem Content="На складе"/>
                            <ComboBoxItem Content="Списанные"/>
                        </ComboBox>

                        <ComboBox x:Name="cmbCategoryFilter"
                                materialDesign:HintAssist.Hint="Категория"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                Width="150"
                                Height="48"
                                Margin="0,0,12,0"
                                SelectionChanged="CmbCategoryFilter_SelectionChanged"/>

                        <ComboBox x:Name="cmbLocationFilter"
                                materialDesign:HintAssist.Hint="Локация"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                Width="150"
                                Height="48"
                                SelectionChanged="CmbLocationFilter_SelectionChanged"/>
                    </StackPanel>

                    <!-- Вид отображения -->
                    <StackPanel Grid.Column="2" 
                              Orientation="Horizontal"
                              VerticalAlignment="Center">
                        <Border Background="#F8FAFC"
                                CornerRadius="12"
                                Padding="4">
                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="toggleGridView"
                                           Style="{StaticResource MaterialDesignTabRadioButton}"
                                           IsChecked="True"
                                           ToolTip="Таблица"
                                           Width="44" Height="40"
                                           GroupName="ViewMode">
                                    <materialDesign:PackIcon Kind="ViewList" Width="20" Height="20"/>
                                </RadioButton>
                                <RadioButton x:Name="toggleCardView"
                                           Style="{StaticResource MaterialDesignTabRadioButton}"
                                           ToolTip="Карточки"
                                           Width="44" Height="40"
                                           GroupName="ViewMode">
                                    <materialDesign:PackIcon Kind="ViewModule" Width="20" Height="20"/>
                                </RadioButton>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Border Grid.Row="1" 
                Style="{StaticResource CardStyle}"
                Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- DataGrid -->
                <DataGrid x:Name="dgAssets"
                        Grid.Row="0"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        HeadersVisibility="Column"
                        GridLinesVisibility="None"
                        CanUserResizeColumns="True"
                        SelectionMode="Extended"
                        SelectionUnit="FullRow"
                        materialDesign:DataGridAssist.CellPadding="16 12"
                        materialDesign:DataGridAssist.ColumnHeaderPadding="16 12"
                        VirtualizingPanel.IsVirtualizing="True"
                        VirtualizingPanel.VirtualizationMode="Recycling"
                        ScrollViewer.CanContentScroll="True"
                        Background="Transparent">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F8FAFC"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#EEF2FF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                            <Setter Property="Background" Value="#F8FAFC"/>
                            <Setter Property="Foreground" Value="#475569"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Height" Value="48"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <!-- Checkbox для выбора -->
                        <DataGridCheckBoxColumn Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                              ElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnStyle}"
                                              EditingElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnEditingStyle}"
                                              Width="60">
                            <DataGridCheckBoxColumn.Header>
                                <CheckBox x:Name="chkSelectAll"
                                        Click="ChkSelectAll_Click"/>
                            </DataGridCheckBoxColumn.Header>
                        </DataGridCheckBoxColumn>

                        <!-- Код актива -->
                        <DataGridTextColumn Header="КОД" 
                                          Binding="{Binding AssetCode}"
                                          Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#6366F1"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Наименование -->
                        <DataGridTemplateColumn Header="НАИМЕНОВАНИЕ" Width="*" MinWidth="300">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="#EEF2FF"
                                              CornerRadius="8"
                                              Width="40" Height="40"
                                              Margin="0,0,12,0">
                                            <TextBlock Text="📦"
                                                     FontSize="20"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding AssetName}"
                                                     FontSize="14"
                                                     FontWeight="Medium"
                                                     Foreground="#1F2937"/>
                                            <TextBlock Text="{Binding Model}"
                                                     FontSize="12"
                                                     Foreground="#64748B"
                                                     Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Категория -->
                        <DataGridTextColumn Header="КАТЕГОРИЯ"
                                          Binding="{Binding CategoryName}"
                                          Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#475569"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Статус -->
                        <DataGridTemplateColumn Header="СТАТУС" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding StatusColor}"
                                            CornerRadius="12"
                                            Padding="12,6">
                                        <TextBlock Text="{Binding StatusName}"
                                                 Foreground="White"
                                                 FontSize="12"
                                                 FontWeight="Medium"
                                                 HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Локация -->
                        <DataGridTemplateColumn Header="ЛОКАЦИЯ" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="MapMarker" 
                                                               VerticalAlignment="Center"
                                                               Width="16" Height="16"
                                                               Margin="0,0,8,0"
                                                               Foreground="#10B981"/>
                                        <TextBlock Text="{Binding LocationName}"
                                                 VerticalAlignment="Center"
                                                 Foreground="#475569"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Ответственный -->
                        <DataGridTemplateColumn Header="ОТВЕТСТВЕННЫЙ" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="32" Height="32"
                                               CornerRadius="16"
                                               Margin="0,0,8,0">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#6366F1" Offset="0"/>
                                                    <GradientStop Color="#8B5CF6" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <TextBlock Text="👤"
                                                     FontSize="16"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="{Binding ResponsiblePerson}"
                                                 VerticalAlignment="Center"
                                                 Foreground="#475569"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Стоимость -->
                        <DataGridTextColumn Header="СТОИМОСТЬ"
                                          Binding="{Binding PurchasePrice, StringFormat='₽ {0:N0}'}"
                                          Width="140">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#1F2937"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Действия -->
                        <DataGridTemplateColumn Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                              Width="32" Height="32"
                                              ToolTip="Просмотр"
                                              Click="BtnView_Click"
                                              CommandParameter="{Binding}">
                                            <materialDesign:PackIcon Kind="Eye" Width="18" Height="18"/>
                                        </Button>
                                        <materialDesign:PopupBox PlacementMode="BottomAndAlignRightEdges"
                                                                StaysOpen="False"
                                                                Width="32" Height="32">
                                            <StackPanel Width="180">
                                                <Button Content="Редактировать"
                                                      Height="40"
                                                      HorizontalContentAlignment="Left"
                                                      Click="BtnEditItem_Click"
                                                      CommandParameter="{Binding}">
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                                            <Setter Property="Padding" Value="16,0"/>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                                <Button Content="Переместить"
                                                      Height="40"
                                                      HorizontalContentAlignment="Left"
                                                      Click="BtnMove_Click"
                                                      CommandParameter="{Binding}">
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                                            <Setter Property="Padding" Value="16,0"/>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                                <Button Content="История"
                                                      Height="40"
                                                      HorizontalContentAlignment="Left"
                                                      Click="BtnHistory_Click"
                                                      CommandParameter="{Binding}">
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                                            <Setter Property="Padding" Value="16,0"/>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                                <Separator Margin="0,8"/>
                                                <Button Content="Удалить"
                                                      Height="40"
                                                      HorizontalContentAlignment="Left"
                                                      Foreground="#EF4444"
                                                      Click="BtnDeleteItem_Click"
                                                      CommandParameter="{Binding}">
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                                            <Setter Property="Padding" Value="16,0"/>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </StackPanel>
                                        </materialDesign:PopupBox>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Пагинация и информация -->
                <Border Grid.Row="1"
                      Background="#F8FAFC"
                      BorderBrush="#E2E8F0"
                      BorderThickness="0,1,0,0"
                      Padding="24,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Информация о выборе -->
                        <StackPanel Grid.Column="0" 
                                  Orientation="Horizontal"
                                  VerticalAlignment="Center">
                            <TextBlock x:Name="txtSelectionInfo"
                                     FontSize="14"
                                     Foreground="#64748B"/>
                            <Button x:Name="btnClearSelection"
                                  Content="Снять выделение"
                                  Style="{StaticResource MaterialDesignFlatButton}"
                                  Foreground="#6366F1"
                                  FontWeight="Medium"
                                  Margin="16,0,0,0"
                                  Visibility="Collapsed"
                                  Click="BtnClearSelection_Click"/>
                        </StackPanel>

                        <!-- Пагинация -->
                        <StackPanel Grid.Column="1" 
                                  Orientation="Horizontal"
                                  VerticalAlignment="Center">
                            <Button x:Name="btnPrevPage"
                                  Style="{StaticResource MaterialDesignIconButton}"
                                  Width="36" Height="36"
                                  Click="BtnPrevPage_Click">
                                <materialDesign:PackIcon Kind="ChevronLeft" Width="20" Height="20"/>
                            </Button>

                            <TextBlock x:Name="txtPageInfo"
                                     Text="1 / 1"
                                     VerticalAlignment="Center"
                                     FontSize="14"
                                     FontWeight="Medium"
                                     Foreground="#1F2937"
                                     Margin="16,0"/>

                            <Button x:Name="btnNextPage"
                                  Style="{StaticResource MaterialDesignIconButton}"
                                  Width="36" Height="36"
                                  Click="BtnNextPage_Click">
                                <materialDesign:PackIcon Kind="ChevronRight" Width="20" Height="20"/>
                            </Button>

                            <ComboBox x:Name="cmbPageSize"
                                    materialDesign:HintAssist.Hint="На странице"
                                    Margin="24,0,0,0"
                                    Width="120"
                                    SelectionChanged="CmbPageSize_SelectionChanged">
                                <ComboBoxItem Content="20" IsSelected="True"/>
                                <ComboBoxItem Content="50"/>
                                <ComboBoxItem Content="100"/>
                                <ComboBoxItem Content="Все"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Последнее обновление -->
                        <StackPanel Grid.Column="2"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center">
                            <TextBlock x:Name="txtLastUpdate"
                                     FontSize="12"
                                     Foreground="#94A3B8"
                                     TextAlignment="Right"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Snackbar для уведомлений -->
        <materialDesign:Snackbar x:Name="NotificationSnackbar"
                                Grid.Row="1"
                                MessageQueue="{materialDesign:MessageQueue}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,32"/>
    </Grid>
</Page>