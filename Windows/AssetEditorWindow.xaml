<Window x:Class="AssetManagment.Windows.AssetEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Актив" Height="760" Width="920"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" ResizeMode="NoResize"
        Background="Transparent" AllowsTransparency="True">

    <Window.InputBindings>
        <KeyBinding Command="{x:Static ApplicationCommands.Save}" Modifiers="Control" Key="S"/>
        <KeyBinding Command="{x:Static ApplicationCommands.Close}" Key="Escape"/>
    </Window.InputBindings>
    <Window.CommandBindings>
        <CommandBinding Command="Save" Executed="SaveCommand_Executed" CanExecute="SaveCommand_CanExecute"/>
        <CommandBinding Command="Close" Executed="CloseCommand_Executed"/>
    </Window.CommandBindings>

    <Border CornerRadius="16" Background="White">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Direction="-90" ShadowDepth="4" Opacity="0.25"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="88"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="72"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" MouseDown="Header_MouseDown">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6366F1" Offset="0"/>
                        <GradientStop Color="#8B5CF6" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <Border Background="#20FFFFFF" CornerRadius="10" Width="40" Height="40" Margin="0,0,12,0">
                        <materialDesign:PackIcon Kind="Package" Width="20" Height="20" Foreground="White"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock x:Name="TitleText" Text="Новый актив"
                                       Foreground="White" FontSize="18" FontWeight="Bold"/>
                            <Border x:Name="ModeChip" Background="#22FFFFFF" CornerRadius="10" Margin="12,0,0,0" Padding="10,2">
                                <TextBlock x:Name="ModeChipText" Text="добавление" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                        <TextBlock x:Name="SubtitleText" Text="Заполните обязательные поля со знаком •"
                                   Foreground="#EAEAEA" FontSize="12" Margin="0,4,0,0"/>
                        <TextBlock x:Name="ErrorText" Foreground="#EF4444" FontSize="12" Visibility="Collapsed"/>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="1" Style="{StaticResource MaterialDesignIconButton}" Width="40" Height="40" Click="CloseButton_Click">
                    <materialDesign:PackIcon Kind="Close" Foreground="White" Width="18" Height="18"/>
                </Button>
            </Grid>

            <!-- Body -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="24">
                    <!-- Метаданные (только при редактировании) -->
                    <Border x:Name="MetaPanel" Visibility="Collapsed"
                            Background="#F8FAFC" CornerRadius="12" Padding="12" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Information" Width="18" Height="18" Foreground="#64748B" Margin="0,0,8,0"/>
                            <TextBlock x:Name="MetaText" Foreground="#475569" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Основные" FontSize="14" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtCode"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="Код актива •"
                                     Margin="0,0,8,0"/>
                            <Button Grid.Column="1" Content="Сгенерировать" Margin="8,0,0,0"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    materialDesign:ButtonAssist.CornerRadius="8"
                                    Click="GenerateCode_Click"/>
                        </Grid>

                        <TextBox x:Name="txtName" Grid.Row="1" Grid.Column="0"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Название •"
                                 Margin="0,12,0,0"/>

                        <TextBox x:Name="txtModel" Grid.Row="2" Grid.Column="0"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Модель"
                                 Margin="0,12,0,0"/>

                        <ComboBox x:Name="cmbCategory" Grid.Row="0" Grid.Column="2"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Категория •"/>

                        <ComboBox x:Name="cmbStatus" Grid.Row="1" Grid.Column="2"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Статус •"
                                  Margin="0,12,0,0"/>

                        <TextBox x:Name="txtSerial" Grid.Row="2" Grid.Column="2"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Серийный номер"
                                 Margin="0,12,0,0"/>
                    </Grid>

                    <TextBlock Text="Закупка и размещение" FontSize="14" FontWeight="Bold" Foreground="#1F2937" Margin="0,20,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DatePicker x:Name="dpPurchaseDate" Grid.Row="0" Grid.Column="0"
                                    materialDesign:HintAssist.Hint="Дата покупки"/>

                        <Grid Grid.Row="1" Grid.Column="0" Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtPrice"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="Стоимость (₽)"
                                     PreviewTextInput="Price_PreviewTextInput"
                                     DataObject.Pasting="Price_Paste"/>
                            <TextBlock Grid.Column="1" Text="₽" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#94A3B8"/>
                        </Grid>

                        <ComboBox x:Name="cmbManufacturer" Grid.Row="2" Grid.Column="0"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Производитель"
                                  Margin="0,12,0,0"/>

                        <ComboBox x:Name="cmbLocation" Grid.Row="0" Grid.Column="2"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Локация •"/>

                        <ComboBox x:Name="cmbResponsible" Grid.Row="1" Grid.Column="2"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Ответственный"
                                  Margin="0,12,0,0"/>

                        <CheckBox x:Name="chkIsActive" Grid.Row="2" Grid.Column="2" Content="Актив участвует в учёте (IsActive)" Margin="0,16,0,0"/>
                    </Grid>

                    <TextBlock Text="Описание" FontSize="14" FontWeight="Bold" Foreground="#1F2937" Margin="0,20,0,8"/>
                    <TextBox x:Name="txtDescription"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Описание / Примечания"
                             AcceptsReturn="True" Height="120" TextWrapping="Wrap"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Grid Grid.Row="2" Background="#F8FAFC">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <materialDesign:PackIcon Kind="AlertCircle" Width="16" Height="16" Foreground="#94A3B8" Margin="0,0,6,0"/>
                    <TextBlock Text="Поля со знаком • обязательны" Foreground="#94A3B8" FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,16,0">
                    <Button Content="Отмена" Style="{StaticResource MaterialDesignOutlinedButton}" 
                            materialDesign:ButtonAssist.CornerRadius="10" Height="36" Margin="0,0,8,0" Click="Cancel_Click"/>
                    <Button x:Name="btnSave" Content="Сохранить" Style="{StaticResource MaterialDesignRaisedButton}" 
                            materialDesign:ButtonAssist.CornerRadius="10" Height="36" Background="#6366F1" Foreground="White" Click="Save_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>