<Window x:Class="AssetManagment.Windows.EmployeeEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Сотрудник" Height="720" Width="900"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" ResizeMode="NoResize"
        Background="Transparent" AllowsTransparency="True">

    <!-- Горячие клавиши -->
    <Window.InputBindings>
        <KeyBinding Command="{x:Static ApplicationCommands.Save}" Modifiers="Control" Key="S"/>
        <KeyBinding Command="{x:Static ApplicationCommands.Close}" Key="Escape"/>
    </Window.InputBindings>
    <Window.CommandBindings>
        <CommandBinding Command="Save" Executed="SaveCommand_Executed" CanExecute="SaveCommand_CanExecute"/>
        <CommandBinding Command="Close" Executed="CloseCommand_Executed"/>
    </Window.CommandBindings>

    <Border CornerRadius="16" Background="White">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Direction="-90" ShadowDepth="4" Opacity="0.25"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="88"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="72"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" MouseDown="Header_MouseDown">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6366F1" Offset="0"/>
                        <GradientStop Color="#8B5CF6" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <Border Background="#20FFFFFF" CornerRadius="10" Width="40" Height="40" Margin="0,0,12,0">
                        <materialDesign:PackIcon Kind="Account" Width="20" Height="20" Foreground="White"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="TitleText" Text="Новый сотрудник" Foreground="White" FontSize="18" FontWeight="Bold"/>
                            <Border x:Name="ModeChip" Background="#22FFFFFF" CornerRadius="10" Margin="12,0,0,0" Padding="10,2">
                                <TextBlock x:Name="ModeChipText" Text="добавление" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                        <TextBlock x:Name="SubtitleText" Text="Заполните ФИО, отдел и должность" Foreground="#EAEAEA" FontSize="12" Margin="0,4,0,0"/>
                        <TextBlock x:Name="ErrorText" Foreground="#EF4444" FontSize="12" Visibility="Collapsed"/>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="1" Style="{StaticResource MaterialDesignIconButton}" Width="40" Height="40" Click="CloseButton_Click">
                    <materialDesign:PackIcon Kind="Close" Foreground="White" Width="18" Height="18"/>
                </Button>
            </Grid>

            <!-- Body -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="24">

                    <!-- Личные данные -->
                    <TextBlock Text="Личные данные" FontSize="14" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBox x:Name="txtLastName" Grid.Column="0" Grid.Row="0"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Фамилия •"/>
                        <TextBox x:Name="txtFirstName" Grid.Column="2" Grid.Row="0"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Имя •"/>

                        <TextBox x:Name="txtMiddleName" Grid.Column="0" Grid.Row="1" Margin="0,12,0,0"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Отчество"/>
                        <DatePicker x:Name="dpHireDate" Grid.Column="2" Grid.Row="1" Margin="0,12,0,0"
                                    materialDesign:HintAssist.Hint="Дата найма"/>
                    </Grid>

                    <!-- Контакты -->
                    <TextBlock Text="Контакты" FontSize="14" FontWeight="Bold" Foreground="#1F2937" Margin="0,20,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtEmail" Grid.Column="0"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Email"/>
                        <TextBox x:Name="txtPhone" Grid.Column="2"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Телефон"/>
                    </Grid>

                    <!-- Организация -->
                    <TextBlock Text="Организация" FontSize="14" FontWeight="Bold" Foreground="#1F2937" Margin="0,20,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox x:Name="cmbDepartment" Grid.Column="0"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Отдел •"/>
                        <ComboBox x:Name="cmbPosition" Grid.Column="2"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Должность •"/>
                    </Grid>

                    <!-- Учетная запись -->
                    <TextBlock Text="Учетная запись" FontSize="14" FontWeight="Bold" Foreground="#1F2937" Margin="0,20,0,8"/>
                    <Border Background="#F8FAFC" CornerRadius="12" Padding="16" BorderBrush="#E2E8F0" BorderThickness="1">
                        <StackPanel>
                            <CheckBox x:Name="chkCreateAccount" Content="Создать/обновить учетную запись" IsChecked="True" Checked="AccountToggle_Changed" Unchecked="AccountToggle_Changed"/>

                            <Grid x:Name="AccountPanel" Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBox x:Name="txtUsername" Grid.Column="0" Grid.Row="0"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="Логин (Username) •"/>
                                <PasswordBox x:Name="txtPassword" Grid.Column="2" Grid.Row="0"
                                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                             materialDesign:HintAssist.Hint="Пароль (для новой УЗ)"/>

                                <ComboBox x:Name="cmbRole" Grid.Column="0" Grid.Row="1" Margin="0,12,0,0"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                          materialDesign:HintAssist.Hint="Роль •"/>
                                <CheckBox x:Name="chkUserIsActive" Grid.Column="2" Grid.Row="1" Margin="0,16,0,0"
                                          Content="Учетная запись активна"/>
                            </Grid>

                            <CheckBox x:Name="chkEmpIsActive" Content="Сотрудник активен" Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Grid Grid.Row="2" Background="#F8FAFC">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <materialDesign:PackIcon Kind="AlertCircle" Width="16" Height="16" Foreground="#94A3B8" Margin="0,0,6,0"/>
                    <TextBlock Text="Поля со знаком • обязательны" Foreground="#94A3B8" FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,16,0">
                    <Button Content="Отмена" Style="{StaticResource MaterialDesignOutlinedButton}" 
                            materialDesign:ButtonAssist.CornerRadius="10" Height="36" Margin="0,0,8,0" Click="Cancel_Click"/>
                    <Button x:Name="btnSave" Content="Сохранить" Style="{StaticResource MaterialDesignRaisedButton}" 
                            materialDesign:ButtonAssist.CornerRadius="10" Height="36" Background="#6366F1" Foreground="White" Click="Save_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>