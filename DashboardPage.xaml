<Page x:Class="AssetManagment.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="DashboardPage"
      Background="#F8FAFC">

    <Page.Resources>
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" Direction="-90" RenderingBias="Quality" ShadowDepth="4" Opacity="0.1" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="QuickActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Height" Value="120"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Direction="-90" ShadowDepth="2" Opacity="0.05"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8FAFC"/>
                    <Setter Property="BorderBrush" Value="#6366F1"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="15" Direction="-90" ShadowDepth="3" Opacity="0.15" Color="#6366F1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InfoCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="12,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" Direction="-90" ShadowDepth="3" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ============================================ -->
            <!-- ПРИВЕТСТВЕННЫЙ БАННЕР -->
            <!-- ============================================ -->
            <Border Grid.Row="0" CornerRadius="20" Padding="40,32" Margin="0,0,0,32">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6366F1" Offset="0"/>
                        <GradientStop Color="#8B5CF6" Offset="0.5"/>
                        <GradientStop Color="#EC4899" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="25" Direction="-90" ShadowDepth="5" Opacity="0.2" Color="#6366F1"/>
                </Border.Effect>
                <Grid>
                    <!-- Декоративные элементы -->
                    <Canvas>
                        <Ellipse Width="250" Height="250" Fill="#15FFFFFF" Canvas.Right="-80" Canvas.Top="-80"/>
                        <Ellipse Width="150" Height="150" Fill="#20FFFFFF" Canvas.Left="-40" Canvas.Bottom="-40"/>
                        <Ellipse Width="100" Height="100" Fill="#25FFFFFF" Canvas.Right="150" Canvas.Bottom="-30"/>
                    </Canvas>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock x:Name="txtWelcome" Text="Добро пожаловать!" FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,0,0,8"/>
                            <TextBlock Text="Информационная система учёта активов" FontSize="18" Foreground="#E0E7FF" Margin="0,0,0,4"/>
                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <Border Background="#20FFFFFF" CornerRadius="8" Padding="12,6" Margin="0,0,12,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="CalendarToday" Width="16" Height="16" Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock x:Name="txtCurrentDate" Text="Загрузка..." FontSize="13" Foreground="White" FontWeight="Medium"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#20FFFFFF" CornerRadius="8" Padding="12,6">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AccountCircle" Width="16" Height="16" Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock x:Name="txtUserRole" Text="Пользователь" FontSize="13" Foreground="White" FontWeight="Medium"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <Border Grid.Column="1" Background="#20FFFFFF" CornerRadius="20" Width="100" Height="100" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ViewDashboard" Width="50" Height="50" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- ============================================ -->
            <!-- СТАТИСТИКА АКТИВОВ -->
            <!-- ============================================ -->
            <UniformGrid Grid.Row="1" Rows="1" Columns="4" Margin="0,0,0,32">
                <!-- Всего активов -->
                <Border Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <Border Background="#EEF2FF" CornerRadius="14" Width="56" Height="56" Margin="0,0,16,0">
                                <materialDesign:PackIcon Kind="Package" Width="28" Height="28" Foreground="#6366F1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Всего активов" FontSize="15" Foreground="#64748B" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtTotalAssetsChange" Text="В системе" FontSize="12" Foreground="#94A3B8" Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Grid.Row="1" x:Name="txtTotalAssets" Text="0" FontSize="42" FontWeight="Bold" Foreground="#1F2937" VerticalAlignment="Center"/>
                        <ProgressBar Grid.Row="2" Height="6" Value="100" Background="#F1F5F9" Foreground="#6366F1" BorderThickness="0"/>
                    </Grid>
                </Border>

                <!-- Активные -->
                <Border Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <Border Background="#ECFDF5" CornerRadius="14" Width="56" Height="56" Margin="0,0,16,0">
                                <materialDesign:PackIcon Kind="CheckCircle" Width="28" Height="28" Foreground="#10B981" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Активные" FontSize="15" Foreground="#64748B" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtActiveAssetsPercent" Text="0% от общего" FontSize="12" Foreground="#10B981" Margin="0,2,0,0" FontWeight="Medium"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Grid.Row="1" x:Name="txtActiveAssets" Text="0" FontSize="42" FontWeight="Bold" Foreground="#10B981" VerticalAlignment="Center"/>
                        <ProgressBar Grid.Row="2" x:Name="progressActive" Height="6" Value="0" Background="#F1F5F9" Foreground="#10B981" BorderThickness="0"/>
                    </Grid>
                </Border>

                <!-- На ремонте -->
                <Border Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <Border Background="#FEF3C7" CornerRadius="14" Width="56" Height="56" Margin="0,0,16,0">
                                <materialDesign:PackIcon Kind="Wrench" Width="28" Height="28" Foreground="#F59E0B" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="На ремонте" FontSize="15" Foreground="#64748B" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtInRepairInfo" Text="Требуют внимания" FontSize="12" Foreground="#F59E0B" Margin="0,2,0,0" FontWeight="Medium"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Grid.Row="1" x:Name="txtInRepair" Text="0" FontSize="42" FontWeight="Bold" Foreground="#F59E0B" VerticalAlignment="Center"/>
                        <ProgressBar Grid.Row="2" x:Name="progressRepair" Height="6" Value="0" Background="#F1F5F9" Foreground="#F59E0B" BorderThickness="0"/>
                    </Grid>
                </Border>

                <!-- Списано -->
                <Border Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <Border Background="#FEF2F2" CornerRadius="14" Width="56" Height="56" Margin="0,0,16,0">
                                <materialDesign:PackIcon Kind="DeleteForever" Width="28" Height="28" Foreground="#EF4444" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Списано" FontSize="15" Foreground="#64748B" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtDisposedInfo" Text="За весь период" FontSize="12" Foreground="#EF4444" Margin="0,2,0,0" FontWeight="Medium"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Grid.Row="1" x:Name="txtDisposed" Text="0" FontSize="42" FontWeight="Bold" Foreground="#EF4444" VerticalAlignment="Center"/>
                        <ProgressBar Grid.Row="2" x:Name="progressDisposed" Height="6" Value="0" Background="#F1F5F9" Foreground="#EF4444" BorderThickness="0"/>
                    </Grid>
                </Border>
            </UniformGrid>

            <!-- ============================================ -->
            <!-- БЫСТРЫЕ ДЕЙСТВИЯ (С ПРОВЕРКОЙ РОЛИ) -->
            <!-- ============================================ -->
            <Border Grid.Row="2" Style="{StaticResource StatCardStyle}" Margin="12,0,12,32" Padding="32">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,24">
                        <Border Background="#EEF2FF" CornerRadius="12" Width="40" Height="40" Margin="0,0,16,0">
                            <materialDesign:PackIcon Kind="Flash" Width="22" Height="22" Foreground="#6366F1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Быстрые действия" FontSize="20" FontWeight="Bold" Foreground="#1F2937"/>
                            <TextBlock Text="Переход к основным разделам системы" FontSize="14" Foreground="#64748B" Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- АДАПТИВНАЯ СЕТКА (2 или 1 кнопка в зависимости от роли) -->
                    <Grid Grid.Row="1" x:Name="QuickActionsGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- КНОПКА "АКТИВЫ" - доступна всем -->
                        <Button x:Name="btnGoToAssets" Grid.Column="0" Style="{StaticResource QuickActionButtonStyle}" Click="BtnGoToAssets_Click">
                            <StackPanel>
                                <Border Background="#EEF2FF" CornerRadius="12" Width="48" Height="48" Margin="0,0,0,12">
                                    <materialDesign:PackIcon Kind="Package" Width="24" Height="24" Foreground="#6366F1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Активы" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="#1F2937"/>
                                <TextBlock Text="Управление активами" FontSize="12" HorizontalAlignment="Center" Foreground="#64748B" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- КНОПКА "СОТРУДНИКИ" - только для Admin и Manager -->
                        <Button x:Name="btnGoToEmployees" Grid.Column="1" Style="{StaticResource QuickActionButtonStyle}" Click="BtnGoToEmployees_Click">
                            <StackPanel>
                                <Border Background="#ECFDF5" CornerRadius="12" Width="48" Height="48" Margin="0,0,0,12">
                                    <materialDesign:PackIcon Kind="AccountGroup" Width="24" Height="24" Foreground="#10B981" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Сотрудники" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="#1F2937"/>
                                <TextBlock Text="База сотрудников" FontSize="12" HorizontalAlignment="Center" Foreground="#64748B" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>
            </Border>

            <!-- ============================================ -->
            <!-- ИНФОРМАЦИОННЫЕ КАРТОЧКИ -->
            <!-- ============================================ -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Статистика сотрудников -->
                <Border Grid.Column="0" Style="{StaticResource InfoCardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Background="#F3E8FF" CornerRadius="10" Width="36" Height="36" Margin="0,0,12,0">
                                <materialDesign:PackIcon Kind="AccountGroup" Width="20" Height="20" Foreground="#8B5CF6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Сотрудники" FontSize="16" FontWeight="Bold" Foreground="#1F2937"/>
                                <TextBlock Text="Общая информация" FontSize="12" Foreground="#64748B"/>
                            </StackPanel>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Background="#F8FAFC" CornerRadius="10" Padding="16" Margin="0,0,6,0">
                                <StackPanel>
                                    <TextBlock Text="Всего" FontSize="12" Foreground="#64748B" FontWeight="Medium"/>
                                    <TextBlock x:Name="txtTotalEmployees" Text="0" FontSize="28" FontWeight="Bold" Foreground="#8B5CF6" Margin="0,4,0,0"/>
                                    <TextBlock Text="сотрудников" FontSize="11" Foreground="#94A3B8" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" Background="#F8FAFC" CornerRadius="10" Padding="16" Margin="6,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="Отделов" FontSize="12" Foreground="#64748B" FontWeight="Medium"/>
                                    <TextBlock x:Name="txtTotalDepartments" Text="0" FontSize="28" FontWeight="Bold" Foreground="#8B5CF6" Margin="0,4,0,0"/>
                                    <TextBlock Text="подразделений" FontSize="11" Foreground="#94A3B8" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Категории активов -->
                <Border Grid.Column="1" Style="{StaticResource InfoCardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Background="#FCE7F3" CornerRadius="10" Width="36" Height="36" Margin="0,0,12,0">
                                <materialDesign:PackIcon Kind="ShapeOutline" Width="20" Height="20" Foreground="#EC4899" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Категории" FontSize="16" FontWeight="Bold" Foreground="#1F2937"/>
                                <TextBlock Text="Типы активов" FontSize="12" Foreground="#64748B"/>
                            </StackPanel>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Background="#F8FAFC" CornerRadius="10" Padding="16" Margin="0,0,6,0">
                                <StackPanel>
                                    <TextBlock Text="Категорий" FontSize="12" Foreground="#64748B" FontWeight="Medium"/>
                                    <TextBlock x:Name="txtTotalCategories" Text="0" FontSize="28" FontWeight="Bold" Foreground="#EC4899" Margin="0,4,0,0"/>
                                    <TextBlock Text="в системе" FontSize="11" Foreground="#94A3B8" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" Background="#F8FAFC" CornerRadius="10" Padding="16" Margin="6,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="Локаций" FontSize="12" Foreground="#64748B" FontWeight="Medium"/>
                                    <TextBlock x:Name="txtTotalLocations" Text="0" FontSize="28" FontWeight="Bold" Foreground="#EC4899" Margin="0,4,0,0"/>
                                    <TextBlock Text="размещений" FontSize="11" Foreground="#94A3B8" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>