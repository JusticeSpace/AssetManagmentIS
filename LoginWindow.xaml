<Window x:Class="AssetManagment.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Вход в систему" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border CornerRadius="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" 
                            Direction="-90" 
                            RenderingBias="Quality" 
                            ShadowDepth="3"
                            Opacity="0.3"
                            Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Левая часть с градиентом и изображением -->
            <Border Grid.Column="0" 
                    CornerRadius="20,0,0,20"
                    MouseDown="Border_MouseDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#667eea" Offset="0"/>
                        <GradientStop Color="#764ba2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <StackPanel VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Margin="40">

                        <!-- Логотип -->
                        <Border Width="120" 
                                Height="120" 
                                Background="#80FFFFFF"
                                CornerRadius="60"
                                Margin="0,0,0,32">
                            <materialDesign:PackIcon Kind="PackageVariantClosed"
                                                   Width="120"
                                                   Height="120"
                                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="Актив+"
                                 FontSize="32"
                                 FontWeight="Bold"
                                 Foreground="White"
                                 TextAlignment="Center"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>

                        <TextBlock Text="Система управления активами"
                                 FontSize="16"
                                 Foreground="#E0E0E0"
                                 TextAlignment="Center"
                                 TextWrapping="Wrap"/>

                        <!-- Декоративные элементы -->
                        <StackPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center"
                                   Margin="0,40,0,0">
                            <Border Width="60" Height="60" 
                                   Background="#40FFFFFF" 
                                   CornerRadius="30" 
                                   Margin="8">
                                <materialDesign:PackIcon Kind="Security" 
                                                       Width="32" 
                                                       Height="32"
                                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Width="60" Height="60" 
                                   Background="#40FFFFFF" 
                                   CornerRadius="30" 
                                   Margin="8">
                                <materialDesign:PackIcon Kind="ChartLine" 
                                                       Width="32" 
                                                       Height="32"
                                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Width="60" Height="60" 
                                   Background="#40FFFFFF" 
                                   CornerRadius="30" 
                                   Margin="8">
                                <materialDesign:PackIcon Kind="CloudCheck" 
                                                       Width="32" 
                                                       Height="32"
                                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Правая часть с формой входа -->
            <Border Grid.Column="1" 
                    Background="White"
                    CornerRadius="0,20,20,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Кнопка закрытия -->
                    <Button Grid.Row="0"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Click="CloseButton_Click"
                            Width="40" 
                            Height="40"
                            HorizontalAlignment="Right"
                            Margin="8">
                        <materialDesign:PackIcon Kind="Close" 
                                               Width="24" 
                                               Height="24"
                                               Foreground="#666666"/>
                    </Button>

                    <!-- Форма входа -->
                    <StackPanel Grid.Row="1"
                               VerticalAlignment="Center"
                               Margin="50,0">

                        <TextBlock Text="Вход"
                                 FontSize="32"
                                 FontWeight="Bold"
                                 Foreground="#333333"
                                 Margin="0,0,0,8"/>

                        <TextBlock Text="Добро пожаловать!"
                                 FontSize="14"
                                 Foreground="#999999"
                                 Margin="0,0,0,40"/>

                        <!-- Поле имени пользователя -->
                        <TextBox x:Name="txtUsername"
                                 materialDesign:HintAssist.Hint="Имя пользователя"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 FontSize="14"
                                 Height="56"
                                 Margin="0,0,0,20"
                                 materialDesign:TextFieldAssist.HasLeadingIcon="True"
                                 materialDesign:TextFieldAssist.LeadingIcon="Account"/>

                        <!-- Поле пароля -->
                        <PasswordBox x:Name="txtPassword"
                                   materialDesign:HintAssist.Hint="Пароль"
                                   Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                   FontSize="14"
                                   Height="56"
                                   Margin="0,0,0,32"
                                   materialDesign:TextFieldAssist.HasLeadingIcon="True"
                                   materialDesign:TextFieldAssist.LeadingIcon="Lock"/>

                        <!-- Кнопка входа -->
                        <Button x:Name="btnLogin"
                                Content="ВОЙТИ"
                                Height="50"
                                FontSize="14"
                                FontWeight="Bold"
                                Click="BtnLogin_Click"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#667eea" Offset="0"/>
                                                <GradientStop Color="#764ba2" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="25"/>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Индикатор загрузки -->
                        <ProgressBar x:Name="progressBar"
                                   Style="{StaticResource MaterialDesignCircularProgressBar}"
                                   Value="0"
                                   IsIndeterminate="True"
                                   Width="40"
                                   Height="40"
                                   Margin="0,20,0,0"
                                   Visibility="Collapsed"/>

                        <!-- Тестовые данные -->
                        <Border Background="#F5F5F5"
                               CornerRadius="8"
                               Padding="16"
                               Margin="0,32,0,0">
                            <StackPanel>
                                <TextBlock Text="Тестовые данные:"
                                         FontSize="12"
                                         FontWeight="Bold"
                                         Foreground="#666666"
                                         Margin="0,0,0,8"/>
                                <TextBlock FontSize="11" Foreground="#888888">
                                    <Run Text="admin" FontWeight="Bold"/> / 123456 - Администратор
                                </TextBlock>
                                <TextBlock FontSize="11" Foreground="#888888">
                                    <Run Text="petrov" FontWeight="Bold"/> / 123456 - Менеджер
                                </TextBlock>
                                <TextBlock FontSize="11" Foreground="#888888">
                                    <Run Text="kozlova" FontWeight="Bold"/> / 123456 - Пользователь
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>