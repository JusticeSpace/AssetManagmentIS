<Window x:Class="AssetManagment.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" 
        Title="АКТИВ+ | Система контроля активов" 
        Height="1080" Width="1920" 
        WindowState="Maximized" 
        WindowStartupLocation="CenterScreen" 
        Background="#F8FAFC"
        TextElement.Foreground="#1F2937"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="Segoe UI"
        Icon="PhotoI/Diamond.png">

    <Window.Resources>
        <!-- Стили для анимированных кнопок меню -->
        <Style x:Key="MenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Height" Value="52"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="8,2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="materialDesign:RippleAssist.Feedback" Value="#E2E8F0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F5F9"/>
                    <Setter Property="Foreground" Value="#334155"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActiveMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#EEF2FF" Offset="0"/>
                        <GradientStop Color="#E0E7FF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#4338CA"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Модернизированное боковое меню -->
            <Border Grid.Column="0" Background="White">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" 
                                    Direction="0" 
                                    RenderingBias="Quality" 
                                    ShadowDepth="0"
                                    Opacity="0.1"
                                    Color="#000000"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Логотип и название -->
                    <!-- Исправленная секция в MainWindow.xaml -->
                    <!-- Логотип и название -->
                    <Border Grid.Row="0" Height="140" Padding="24,32">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#6366F1" Offset="0"/>
                                <GradientStop Color="#8B5CF6" Offset="0.7"/>
                                <GradientStop Color="#EC4899" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <!-- Обернем в Grid для решения проблемы с Child -->
                        <Grid>
                            <!-- Декоративные элементы -->
                            <Canvas>
                                <Ellipse Width="100" Height="100" 
                   Fill="#20FFFFFF" 
                   Canvas.Right="-30" 
                   Canvas.Top="-20"/>
                                <Ellipse Width="60" Height="60" 
                   Fill="#30FFFFFF" 
                   Canvas.Left="-10" 
                   Canvas.Bottom="-10"/>
                            </Canvas>

                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Border Background="#20FFFFFF" 
                   CornerRadius="16"
                   Width="48" Height="48"
                   Margin="0,0,0,12">
                                    <Image Source="PhotoI/Diamond.png" 
                      Width="28" Height="28" Margin="10,20,10,0"/>
                                </Border>

                                <TextBlock Text="АКТИВ+" 
                     FontSize="24"
                     FontWeight="Bold"
                     Foreground="White"
                     HorizontalAlignment="Center"/>
                                <TextBlock Text="Система контроля активов" 
                     FontSize="11"
                     Foreground="#E0E7FF"
                     HorizontalAlignment="Center"
                     TextWrapping="Wrap"
                     TextAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Информация о пользователе -->
                    <Border Grid.Row="1" 
                           Background="#F8FAFC"
                           Padding="20,16"
                           BorderBrush="#E2E8F0"
                           BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                   Width="44" Height="44" 
                                   CornerRadius="22">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#6366F1" Offset="0"/>
                                        <GradientStop Color="#8B5CF6" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock x:Name="txtUserInitials"
                                          Text="АД" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="16"
                                          FontWeight="Bold"
                                          Foreground="White"/>
                            </Border>

                            <StackPanel Grid.Column="1" 
                                       Margin="12,0,8,0" 
                                       VerticalAlignment="Center">
                                <TextBlock x:Name="txtUserName" 
                                          Text="Администратор" 
                                          FontSize="14"
                                          FontWeight="SemiBold"
                                          Foreground="#1F2937"/>
                                <TextBlock x:Name="txtUserRole" 
                                          Text="Системный администратор" 
                                          FontSize="12"
                                          Foreground="#64748B"/>
                            </StackPanel>

                            <Button Grid.Column="2"
                                   Style="{StaticResource MaterialDesignIconButton}"
                                   Width="32" Height="32"
                                   Padding="0"
                                   Click="BtnProfile_Click"
                                   ToolTip="Профиль">
                                <materialDesign:PackIcon Kind="DotsVertical" 
                                                       Width="18" 
                                                       Height="18"
                                                       Foreground="#94A3B8"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Меню навигации -->
                    <ScrollViewer Grid.Row="2" 
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="16,24,16,16">
                        <StackPanel x:Name="MenuPanel">
                            <!-- Основные разделы -->
                            <TextBlock Text="ОСНОВНЫЕ"
                                     FontSize="11"
                                     FontWeight="SemiBold"
                                     Foreground="#94A3B8"
                                     Margin="20,0,0,12"
                                     Opacity="0.8"/>

                            <Button x:Name="btnDashboard"
                                   Style="{StaticResource ActiveMenuButtonStyle}"
                                   Click="BtnDashboard_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#6366F1"
                                           CornerRadius="8"
                                           Width="32" Height="32"
                                           Margin="0,0,16,0">
                                        <materialDesign:PackIcon Kind="ViewDashboard" 
                                                               Width="18" Height="18"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Панель управления" 
                                             VerticalAlignment="Center"
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnAssets"
                                   Style="{StaticResource MenuButtonStyle}"
                                   Click="BtnAssets_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#10B981"
                                           CornerRadius="8"
                                           Width="32" Height="32"
                                           Margin="0,0,16,0">
                                        <materialDesign:PackIcon Kind="Package" 
                                                               Width="18" Height="18"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Активы" 
                                             VerticalAlignment="Center"
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnEmployees"
                                   Style="{StaticResource MenuButtonStyle}"
                                   Click="BtnEmployees_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#F59E0B"
                                           CornerRadius="8"
                                           Width="32" Height="32"
                                           Margin="0,0,16,0">
                                        <materialDesign:PackIcon Kind="AccountGroup" 
                                                               Width="18" Height="18"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Сотрудники" 
                                             VerticalAlignment="Center"
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <!-- Управление -->
                            <TextBlock Text="УПРАВЛЕНИЕ"
                                     FontSize="11"
                                     FontWeight="SemiBold"
                                     Foreground="#94A3B8"
                                     Margin="20,32,0,12"
                                     Opacity="0.8"/>

                            <Button x:Name="btnLocations"
                                   Style="{StaticResource MenuButtonStyle}"
                                   Click="BtnLocations_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#8B5CF6"
                                           CornerRadius="8"
                                           Width="32" Height="32"
                                           Margin="0,0,16,0">
                                        <materialDesign:PackIcon Kind="MapMarker" 
                                                               Width="18" Height="18"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Локации" 
                                             VerticalAlignment="Center"
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnReports"
                                   Style="{StaticResource MenuButtonStyle}"
                                   Click="BtnReports_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#EC4899"
                                           CornerRadius="8"
                                           Width="32" Height="32"
                                           Margin="0,0,16,0">
                                        <materialDesign:PackIcon Kind="ChartLine" 
                                                               Width="18" Height="18"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Отчеты" 
                                             VerticalAlignment="Center"
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <!-- Система -->
                            <TextBlock Text="СИСТЕМА"
                                     FontSize="11"
                                     FontWeight="SemiBold"
                                     Foreground="#94A3B8"
                                     Margin="20,32,0,12"
                                     Opacity="0.8"/>

                            <Button x:Name="btnSettings"
                                   Style="{StaticResource MenuButtonStyle}"
                                   Click="BtnSettings_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#64748B"
                                           CornerRadius="8"
                                           Width="32" Height="32"
                                           Margin="0,0,16,0">
                                        <materialDesign:PackIcon Kind="Settings" 
                                                               Width="18" Height="18"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Настройки" 
                                             VerticalAlignment="Center"
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Нижняя панель с выходом -->
                    <Border Grid.Row="3" 
                           Background="#F8FAFC"
                           BorderBrush="#E2E8F0"
                           BorderThickness="0,1,0,0"
                           Padding="16">
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                               Height="48"
                               HorizontalContentAlignment="Left"
                               Padding="20,0"
                               Click="BtnLogout_Click"
                               Foreground="#EF4444">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#FEF2F2"
                                       CornerRadius="8"
                                       Width="32" Height="32"
                                       Margin="0,0,16,0">
                                    <materialDesign:PackIcon Kind="Logout" 
                                                           Width="18" Height="18"
                                                           Foreground="#EF4444"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Выйти из системы" 
                                         VerticalAlignment="Center" 
                                         FontSize="14"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </Grid>
            </Border>

            <!-- Основной контент -->
            <Grid Grid.Column="1" Background="#F8FAFC">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Современная верхняя панель -->
                <Border Grid.Row="0" 
                       Background="White"
                       Height="80"
                       Padding="32,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" 
                                        Direction="-90" 
                                        RenderingBias="Quality" 
                                        ShadowDepth="2"
                                        Opacity="0.05"
                                        Color="#000000"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Заголовок страницы -->
                        <StackPanel Grid.Column="0" 
                                   Orientation="Horizontal"
                                   VerticalAlignment="Center">
                            <Border x:Name="PageIconBorder"
                                   Background="#EEF2FF"
                                   CornerRadius="12"
                                   Width="40" Height="40"
                                   Margin="0,0,16,0">
                                <materialDesign:PackIcon x:Name="PageIcon"
                                                       Kind="ViewDashboard" 
                                                       Width="22" Height="22"
                                                       Foreground="#6366F1"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="PageTitle"
                                          Text="Панель управления" 
                                          FontSize="20"
                                          FontWeight="Bold"
                                          Foreground="#1F2937"/>
                                <TextBlock x:Name="PageSubtitle"
                                          Text="Обзор системы и статистика"
                                          FontSize="14"
                                          Foreground="#64748B"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Панель действий -->
                        <StackPanel Grid.Column="1" 
                                   Orientation="Horizontal" 
                                   VerticalAlignment="Center">
                            <TextBlock x:Name="txtCurrentDateTime" 
                                      Text="18 сентября 2024, 14:30" 
                                      FontSize="14"
                                      VerticalAlignment="Center"
                                      Foreground="#64748B"
                                      Margin="0,0,24,0"/>

                            <!-- Кнопка уведомлений -->
                            <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                   Width="44" Height="44"
                                   Margin="0,0,12,0"
                                   Background="#F1F5F9">
                                <materialDesign:Badged Badge="3" 
                                                      BadgePlacementMode="TopRight"
                                                      BadgeColorZoneMode="SecondaryDark">
                                    <materialDesign:PackIcon Kind="Bell" 
                                                           Width="20" 
                                                           Height="20"
                                                           Foreground="#64748B"/>
                                </materialDesign:Badged>
                            </Button>

                            <Button x:Name="btnRefresh" 
                                   Height="44"
                                   Padding="20,0"
                                   Click="BtnRefresh_Click">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                        <Setter Property="Background" Value="#6366F1"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="12"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Refresh" 
                                                           VerticalAlignment="Center"
                                                           Width="18" Height="18"/>
                                    <TextBlock Text="Обновить" 
                                             Margin="8,0,0,0" 
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Контент страницы -->
                <Frame Grid.Row="1" 
                      x:Name="MainFrame" 
                      NavigationUIVisibility="Hidden"
                      Background="Transparent"
                      Margin="0,16,0,0"/>

                <!-- Snackbar для уведомлений -->
                <materialDesign:Snackbar x:Name="MainSnackbar" 
                                        Grid.Row="1"
                                        MessageQueue="{materialDesign:MessageQueue}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        Margin="0,0,0,32"/>
            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Window>