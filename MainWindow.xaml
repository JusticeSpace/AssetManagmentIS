<Window x:Class="AssetManagment.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" 
        Title="АКТИВ+ | Система контроля активов" 
        Height="1080" Width="1920" 
        WindowState="Maximized" 
        WindowStartupLocation="CenterScreen" 
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Icon="PhotoI/Diamond.png">

    <materialDesign:DialogHost Identifier="RootDialog">
        <materialDesign:DrawerHost x:Name="DrawerHost" IsLeftDrawerOpen="True">
            <!-- Боковое меню -->
            <materialDesign:DrawerHost.LeftDrawerContent>
                <DockPanel MinWidth="300" Background="{DynamicResource MaterialDesignPaper}">
                    <!-- Заголовок с логотипом -->
                    <materialDesign:ColorZone Mode="PrimaryMid" DockPanel.Dock="Top" Height="140">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Логотип -->
                            <Image Source="PhotoI/Diamond.png" 
                                   Width="60" Height="60" 
                                   Margin="0,20,0,10"
                                   HorizontalAlignment="Center"/>

                            <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                                <TextBlock Text="АКТИВ+" 
                                         Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                         HorizontalAlignment="Center"
                                         Foreground="White"
                                         FontWeight="Bold"/>
                                <TextBlock Text="Система контроля активов" 
                                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                                         HorizontalAlignment="Center"
                                         Foreground="White"
                                         Opacity="0.8"
                                         Margin="0,0,0,10"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:ColorZone>

                    <!-- Меню навигации -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="MenuListBox" 
                                 Margin="0,8"
                                 SelectedIndex="0">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                                    <Setter Property="Height" Value="56"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="8,2"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource PrimaryHueLightBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBoxItem x:Name="DashboardItem">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="56"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon x:Name="PageIcon" 
                                               Kind="ViewDashboard" 
                                               Width="56" Height="24"
                                               VerticalAlignment="Center"
                                               Foreground="Black" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="Дашборд" 
                                             VerticalAlignment="Center" 
                                             FontSize="15"/>
                                </Grid>
                            </ListBoxItem>

                            <ListBoxItem x:Name="AssetsItem">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="56"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Kind="Package" 
                                                           Width="24" Height="24" 
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="Активы" 
                                             VerticalAlignment="Center" 
                                             FontSize="15"/>
                                </Grid>
                            </ListBoxItem>

                            <ListBoxItem x:Name="EmployeesItem">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="56"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Kind="AccountGroup" 
                                                           Width="24" Height="24" 
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="Сотрудники" 
                                             VerticalAlignment="Center" 
                                             FontSize="15"/>
                                </Grid>
                            </ListBoxItem>

                            <ListBoxItem x:Name="LocationsItem">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="56"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Kind="MapMarker" 
                                                           Width="24" Height="24" 
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="Локации" 
                                             VerticalAlignment="Center" 
                                             FontSize="15"/>
                                </Grid>
                            </ListBoxItem>

                            <ListBoxItem x:Name="ReportsItem">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="56"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Kind="ChartLine" 
                                                           Width="24" Height="24" 
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="Отчеты" 
                                             VerticalAlignment="Center" 
                                             FontSize="15"/>
                                </Grid>
                            </ListBoxItem>

                            <ListBoxItem x:Name="SettingsItem">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="56"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Kind="Settings" 
                                                           Width="24" Height="24" 
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="Настройки" 
                                             VerticalAlignment="Center" 
                                             FontSize="15"/>
                                </Grid>
                            </ListBoxItem>
                        </ListBox>
                    </ScrollViewer>

                    <!-- Информация о пользователе -->
                    <materialDesign:Card DockPanel.Dock="Bottom" 
                                         Margin="16" 
                                         Padding="16"
                                         UniformCornerRadius="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Width="48" Height="48" 
                                    CornerRadius="24"
                                    Background="{DynamicResource PrimaryHueLightBrush}">
                                <TextBlock Text="АД" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"
                                         FontSize="18"
                                         FontWeight="Medium"
                                         Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            </Border>

                            <StackPanel Grid.Column="1" 
                                        Margin="16,0" 
                                        VerticalAlignment="Center">
                                <TextBlock x:Name="txtUserRole" 
                                           Text="Администратор" 
                                           Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                                <TextBlock x:Name="txtUserEmail" 
                                           Text="admin@company.ru" 
                                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                           Opacity="0.7"/>
                            </StackPanel>

                            <Button Grid.Column="2"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    ToolTip="Выйти">
                                <materialDesign:PackIcon Kind="Logout"/>
                            </Button>
                        </Grid>
                    </materialDesign:Card>
                </DockPanel>
            </materialDesign:DrawerHost.LeftDrawerContent>

            <!-- Основное содержимое -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Верхняя панель -->
                <materialDesign:ColorZone Grid.Row="0" 
                                          Mode="PrimaryMid" 
                                          Height="64"
                                          materialDesign:ElevationAssist.Elevation="Dp4">
                    <Grid Margin="16,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ToggleButton Grid.Column="0"
                                      Style="{StaticResource MaterialDesignHamburgerToggleButton}"
                                      IsChecked="{Binding ElementName=DrawerHost, Path=IsLeftDrawerOpen}"
                                      Foreground="White"/>

                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="24,0">
                            <materialDesign:PackIcon Kind="ViewDashboard" 
                                                   Width="24" Height="24"
                                                   VerticalAlignment="Center"
                                                   Foreground="White"
                                                   Margin="0,0,12,0"/>
                            <TextBlock x:Name="PageTitle"
                                       Text="Панель управления" 
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                       VerticalAlignment="Center"
                                       Foreground="White"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center">
                            <TextBlock x:Name="txtCurrentDateTime" 
                                       Text="18 сентября 2024, 14:30" 
                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,24,0"
                                       Foreground="White"
                                       Opacity="0.8"/>

                            <!-- Кнопка уведомлений с индикатором -->
                            <Grid Margin="0,0,16,0">
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                        Foreground="White">
                                    <materialDesign:PackIcon Kind="Bell" Width="24" Height="24"/>
                                </Button>
                                <!-- Индикатор новых уведомлений -->
                                <Border x:Name="NotificationBadge"
                                        Background="#E74C3C"
                                        Width="12" Height="12"
                                        CornerRadius="6"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="0,8,8,0"
                                        Visibility="Visible">
                                    <TextBlock Text="3" 
                                             Foreground="White"
                                             FontSize="8"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Border>
                            </Grid>

                            <Button x:Name="btnRefresh" 
                                    Style="{StaticResource MaterialDesignRaisedLightButton}"
                                    Click="BtnRefresh_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Refresh" 
                                                           VerticalAlignment="Center"/>
                                    <TextBlock Text="Обновить" 
                                             Margin="8,0,4,0" 
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:ColorZone>

                <!-- Контент страницы -->
                <Frame Grid.Row="1" 
                       x:Name="MainFrame" 
                       NavigationUIVisibility="Hidden"/>

                <!-- Snackbar для уведомлений -->
                <materialDesign:Snackbar x:Name="MainSnackbar" 
                                         Grid.Row="1"
                                         MessageQueue="{materialDesign:MessageQueue}"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Bottom"
                                         Margin="0,0,0,20"/>
            </Grid>
        </materialDesign:DrawerHost>
    </materialDesign:DialogHost>
</Window>