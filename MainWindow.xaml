<Window x:Class="AssetManagment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="АКТИВ+ | Система контроля активов" 
        Height="1080" Width="1920"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.Resources>
        <!-- Стили остаются те же -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="25,0,0,0"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="0"
                                CornerRadius="5"
                                Margin="10,0">
                            <ContentPresenter HorizontalAlignment="Left" 
                                            VerticalAlignment="Center"
                                            Margin="15,0,0,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A4556"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2C3542"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DashboardCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" 
                                    Opacity="0.08" 
                                    BlurRadius="15" 
                                    ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="25,20,25,5"/>
        </Style>

        <Style x:Key="BigNumber" TargetType="TextBlock">
            <Setter Property="FontSize" Value="42"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="25,5,25,5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковое меню -->
        <Border Grid.Column="0" Background="#2C3542">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>

                <!-- Логотип/Заголовок -->
                <Border Grid.Row="0" BorderBrush="#3A4556" 
                        BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="АКТИВ+" 
                                 FontSize="32" 
                                 FontWeight="Bold" 
                                 Foreground="White"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Bottom"/>
                        <TextBlock Grid.Row="1" Text="Система контроля активов" 
                                 FontSize="12" 
                                 Foreground="#E0E0E0"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,15"/>
                    </Grid>
                </Border>

                <!-- Пункты меню -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,30,0,0">
                        <Button x:Name="btnDashboard" Style="{StaticResource MenuButtonStyle}" 
                                Background="#3A4556" Click="BtnDashboard_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="20" Margin="0,0,12,0"/>
                                <TextBlock Text="Дашборд"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnAssets" Style="{StaticResource MenuButtonStyle}" Click="BtnAssets_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📦" FontSize="20" Margin="0,0,12,0"/>
                                <TextBlock Text="Активы"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnEmployees" Style="{StaticResource MenuButtonStyle}" Click="BtnEmployees_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" FontSize="20" Margin="0,0,12,0"/>
                                <TextBlock Text="Сотрудники"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnLocations" Style="{StaticResource MenuButtonStyle}" Click="BtnLocations_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📍" FontSize="20" Margin="0,0,12,0"/>
                                <TextBlock Text="Локации"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnReports" Style="{StaticResource MenuButtonStyle}" Click="BtnReports_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📈" FontSize="20" Margin="0,0,12,0"/>
                                <TextBlock Text="Отчеты"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnSettings" Style="{StaticResource MenuButtonStyle}" Click="BtnSettings_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" FontSize="20" Margin="0,0,12,0"/>
                                <TextBlock Text="Настройки"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Информация о пользователе -->
                <Border Grid.Row="2" BorderBrush="#3A4556" 
                        BorderThickness="0,1,0,0">
                    <Grid Margin="20,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="45" Height="45" 
                                Background="#3A4556" CornerRadius="22.5">
                            <TextBlock Text="👤" 
                                     FontSize="24" 
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock x:Name="txtUserRole" Text="Администратор" 
                                     Foreground="White" 
                                     FontSize="14" FontWeight="Medium"/>
                            <TextBlock x:Name="txtUserEmail" Text="admin@company.ru" 
                                     Foreground="#E0E0E0" 
                                     FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель -->
            <Border Grid.Row="0" Background="White" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="0,0,0,1">
                <Grid Margin="40,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                             Text="Панель управления" 
                             FontSize="28" 
                             FontWeight="SemiBold"
                             Foreground="#2C3E50"
                             VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" 
                              Orientation="Horizontal" 
                              VerticalAlignment="Center">
                        <TextBlock x:Name="txtCurrentDateTime" 
                                 Text="18 сентября 2024, 14:30" 
                                 Foreground="#7F8C8D"
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"
                                 FontSize="14"/>
                        <Button Content="🔔" 
                              FontSize="22" 
                              Background="Transparent" 
                              BorderThickness="0"
                              Margin="15,0"
                              Cursor="Hand"/>
                        <Button x:Name="btnRefresh" Content="🔄 Обновить данные" 
                              Background="#3498DB" 
                              Foreground="White"
                              BorderThickness="0"
                              Padding="25,12"
                              FontWeight="Medium"
                              FontSize="14"
                              Cursor="Hand"
                              Click="BtnRefresh_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Контент дашборда -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid Margin="25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Первый ряд карточек -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Карточка 1 - Всего активов -->
                        <Border Grid.Column="0" Style="{StaticResource DashboardCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="25,20,25,5">
                                    <Border Background="#EBF5FF" CornerRadius="8" Padding="10">
                                        <TextBlock Text="📦" FontSize="24"/>
                                    </Border>
                                    <TextBlock Text="Всего активов" 
                                             FontSize="18"
                                             FontWeight="SemiBold"
                                             Foreground="#2C3E50"
                                             VerticalAlignment="Center"
                                             Margin="15,0,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Row="1" 
                                         x:Name="txtTotalAssets"
                                         Text="0" 
                                         Style="{StaticResource BigNumber}"/>
                                <TextBlock Grid.Row="2" 
                                         x:Name="txtTotalAssetsChange"
                                         Text="Загрузка..." 
                                         Foreground="#27AE60"
                                         FontSize="14"
                                         Margin="25,0,25,20"/>
                            </Grid>
                        </Border>

                        <!-- Карточка 2 - Активные -->
                        <Border Grid.Column="1" Style="{StaticResource DashboardCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="25,20,25,5">
                                    <Border Background="#E8F8F5" CornerRadius="8" Padding="10">
                                        <TextBlock Text="✅" FontSize="24"/>
                                    </Border>
                                    <TextBlock Text="Активные" 
                                             FontSize="18"
                                             FontWeight="SemiBold"
                                             Foreground="#2C3E50"
                                             VerticalAlignment="Center"
                                             Margin="15,0,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Row="1" 
                                         x:Name="txtActiveAssets"
                                         Text="0" 
                                         Style="{StaticResource BigNumber}"
                                         Foreground="#27AE60"/>
                                <TextBlock Grid.Row="2" 
                                         x:Name="txtActiveAssetsPercent"
                                         Text="0% от общего числа" 
                                         Foreground="#7F8C8D"
                                         FontSize="14"
                                         Margin="25,0,25,20"/>
                            </Grid>
                        </Border>

                        <!-- Карточка 3 - На ремонте -->
                        <Border Grid.Column="2" Style="{StaticResource DashboardCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="25,20,25,5">
                                    <Border Background="#FFF4E6" CornerRadius="8" Padding="10">
                                        <TextBlock Text="🔧" FontSize="24"/>
                                    </Border>
                                    <TextBlock Text="На ремонте" 
                                             FontSize="18"
                                             FontWeight="SemiBold"
                                             Foreground="#2C3E50"
                                             VerticalAlignment="Center"
                                             Margin="15,0,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Row="1" 
                                         x:Name="txtInRepair"
                                         Text="0" 
                                         Style="{StaticResource BigNumber}"
                                         Foreground="#F39C12"/>
                                <TextBlock Grid.Row="2" 
                                         x:Name="txtInRepairInfo"
                                         Text="Требуют внимания" 
                                         Foreground="#7F8C8D"
                                         FontSize="14"
                                         Margin="25,0,25,20"/>
                            </Grid>
                        </Border>

                        <!-- Карточка 4 - Списано -->
                        <Border Grid.Column="3" Style="{StaticResource DashboardCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="25,20,25,5">
                                    <Border Background="#FFEBEE" CornerRadius="8" Padding="10">
                                        <TextBlock Text="❌" FontSize="24"/>
                                    </Border>
                                    <TextBlock Text="Списано" 
                                             FontSize="18"
                                             FontWeight="SemiBold"
                                             Foreground="#2C3E50"
                                             VerticalAlignment="Center"
                                             Margin="15,0,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Row="1" 
                                         x:Name="txtDisposed"
                                         Text="0" 
                                         Style="{StaticResource BigNumber}"
                                         Foreground="#E74C3C"/>
                                <TextBlock Grid.Row="2" 
                                         x:Name="txtDisposedInfo"
                                         Text="За текущий год" 
                                         Foreground="#7F8C8D"
                                         FontSize="14"
                                         Margin="25,0,25,20"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Второй ряд - графики и статистика -->
                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- График активов -->
                        <Border Grid.Column="0" Style="{StaticResource DashboardCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="300"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                         Text="Динамика активов за последние 12 месяцев" 
                                         Style="{StaticResource CardTitle}"/>

                                <!-- Заглушка для графика -->
                                <Border Grid.Row="1" 
                                      Background="#F8F9FA" 
                                      Margin="25,10,25,25"
                                      CornerRadius="8">
                                    <Grid>
                                        <TextBlock Text="📊" 
                                                 FontSize="48"
                                                 HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center"
                                                 Foreground="#BDC3C7"/>
                                        <TextBlock Text="График будет доступен после накопления данных" 
                                                 HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center"
                                                 Foreground="#BDC3C7"
                                                 FontSize="14"
                                                 Margin="0,80,0,0"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Распределение по категориям -->
                        <Border Grid.Column="1" Style="{StaticResource DashboardCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                         Text="Распределение по категориям" 
                                         Style="{StaticResource CardTitle}"/>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="categoryStatsPanel" Margin="25,10,25,25">
                                        <!-- Категории будут добавлены динамически -->
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Третий ряд - таблица последних активов -->
                    <Border Grid.Row="2" Style="{StaticResource DashboardCard}" 
                          Margin="12,10,12,25">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="400"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="25,20,25,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                         Text="Последние добавленные активы" 
                                         FontSize="18"
                                         FontWeight="SemiBold"
                                         Foreground="#2C3E50"/>

                                <Button Grid.Column="1" 
                                        Content="Показать все →" 
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#3498DB"
                                        FontWeight="Medium"
                                        Cursor="Hand"
                                        Click="BtnAssets_Click"/>
                            </Grid>

                            <DataGrid x:Name="dgRecentAssets" 
                                    Grid.Row="1" 
                                    Margin="25,0,25,25"
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    GridLinesVisibility="None"
                                    HeadersVisibility="Column"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    RowBackground="Transparent"
                                    AlternatingRowBackground="#FAFBFC"
                                    SelectionMode="Single"
                                    IsReadOnly="True">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="#7F8C8D"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Height" Value="45"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    </Style>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Height" Value="50"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F0F3F7"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="FontSize" Value="14"/>
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Код" 
                                                      Width="100" 
                                                      Binding="{Binding Id}"/>
                                    <DataGridTextColumn Header="Наименование" 
                                                      Width="*" 
                                                      Binding="{Binding Name}"/>
                                    <DataGridTextColumn Header="Категория" 
                                                      Width="200" 
                                                      Binding="{Binding Category}"/>
                                    <DataGridTemplateColumn Header="Статус" Width="150">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding StatusColor}" 
                                                        CornerRadius="12" 
                                                        Padding="12,4"
                                                        HorizontalAlignment="Left">
                                                    <TextBlock Text="{Binding Status}" 
                                                             Foreground="White" 
                                                             FontSize="12"
                                                             FontWeight="Medium"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Дата добавления" 
                                                      Width="180" 
                                                      Binding="{Binding DateAdded}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>